{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @ingroup templates
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
    'content-container',
  ]
%}
{% if content %}
  {# See Region.php in Bootstrap base theme for more info on why I did this weird stuff, also see https://www.drupal.org/project/bootstrap/issues/2695165 #}
  <div{{ attributes.addClass(classes).removeClass('alert', 'alert-info', 'messages', 'info') }}>
    <div{{ attributes.addClass('alert', 'alert-info', 'messages', 'info').removeClass('region', 'content-container') }}>
      {{ content }}
    </div>
  </div>
{% endif %}
